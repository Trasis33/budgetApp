{
  "designSystem": {
    "metadata": {
      "name": "Open Source CRM Design System",
      "version": "1.0.0",
      "description": "Design system extracted from CRM landing page interface"
    },
    "colors": {
      "primary": {
        "black": "#000000",
        "white": "#ffffff",
        "gray-900": "#1a1a1a",
        "gray-800": "#2d2d2d",
        "gray-700": "#404040",
        "gray-600": "#666666",
        "gray-500": "#808080",
        "gray-400": "#999999",
        "gray-300": "#cccccc",
        "gray-200": "#e5e5e5",
        "gray-100": "#f5f5f5",
        "gray-50": "#fafafa"
      },
      "accent": {
        "green": "#22c55e",
        "blue": "#3b82f6",
        "purple": "#8b5cf6",
        "orange": "#f97316",
        "pink": "#ec4899"
      },
      "semantic": {
        "background": "#ffffff",
        "surface": "#ffffff",
        "border": "#e5e5e5",
        "text-primary": "#1a1a1a",
        "text-secondary": "#666666",
        "text-muted": "#999999"
      }
    },
    "typography": {
      "fontFamilies": {
        "primary": "system-ui, -apple-system, sans-serif",
        "secondary": "ui-monospace, monospace"
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem"
      },
      "fontWeights": {
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      },
      "lineHeights": {
        "tight": "1.25",
        "normal": "1.5",
        "relaxed": "1.75"
      },
      "hierarchy": {
        "h1": {
          "fontSize": "3rem",
          "fontWeight": "700",
          "lineHeight": "1.25"
        },
        "h2": {
          "fontSize": "2.25rem",
          "fontWeight": "600",
          "lineHeight": "1.25"
        },
        "h3": {
          "fontSize": "1.875rem",
          "fontWeight": "600",
          "lineHeight": "1.25"
        },
        "body-large": {
          "fontSize": "1.125rem",
          "fontWeight": "400",
          "lineHeight": "1.75"
        },
        "body": {
          "fontSize": "1rem",
          "fontWeight": "400",
          "lineHeight": "1.5"
        },
        "body-small": {
          "fontSize": "0.875rem",
          "fontWeight": "400",
          "lineHeight": "1.5"
        },
        "caption": {
          "fontSize": "0.75rem",
          "fontWeight": "400",
          "lineHeight": "1.5"
        }
      }
    },
    "spacing": {
      "scale": {
        "0": "0",
        "1": "0.25rem",
        "2": "0.5rem",
        "3": "0.75rem",
        "4": "1rem",
        "5": "1.25rem",
        "6": "1.5rem",
        "8": "2rem",
        "10": "2.5rem",
        "12": "3rem",
        "16": "4rem",
        "20": "5rem",
        "24": "6rem",
        "32": "8rem",
        "40": "10rem",
        "48": "12rem",
        "64": "16rem"
      },
      "component": {
        "button-padding-x": "1.5rem",
        "button-padding-y": "0.75rem",
        "card-padding": "1.5rem",
        "section-padding-y": "4rem",
        "container-padding-x": "1rem"
      }
    },
    "layout": {
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "containers": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1400px"
      },
      "grid": {
        "columns": 12,
        "gap": "1.5rem"
      }
    },
    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "base": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "full": "9999px"
    },
    "shadows": {
      "none": "none",
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    },
    "components": {
      "button": {
        "primary": {
          "backgroundColor": "#000000",
          "color": "#ffffff",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "0.375rem",
          "fontWeight": "500",
          "fontSize": "0.875rem",
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease"
        },
        "secondary": {
          "backgroundColor": "transparent",
          "color": "#1a1a1a",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "0.375rem",
          "fontWeight": "500",
          "fontSize": "0.875rem",
          "border": "1px solid #e5e5e5",
          "cursor": "pointer",
          "transition": "all 0.2s ease"
        }
      },
      "card": {
        "base": {
          "backgroundColor": "#ffffff",
          "borderRadius": "0.5rem",
          "padding": "1.5rem",
          "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
          "border": "1px solid #e5e5e5"
        },
        "feature": {
          "backgroundColor": "#ffffff",
          "borderRadius": "0.5rem",
          "padding": "2rem",
          "textAlign": "center",
          "border": "1px solid #e5e5e5"
        }
      },
      "table": {
        "container": {
          "backgroundColor": "#ffffff",
          "borderRadius": "0.5rem",
          "border": "1px solid #e5e5e5",
          "overflow": "hidden"
        },
        "header": {
          "backgroundColor": "#f9fafb",
          "borderBottom": "1px solid #e5e5e5",
          "padding": "0.75rem 1rem",
          "fontWeight": "500",
          "fontSize": "0.875rem",
          "color": "#374151"
        },
        "cell": {
          "padding": "0.75rem 1rem",
          "borderBottom": "1px solid #f3f4f6",
          "fontSize": "0.875rem",
          "color": "#1f2937"
        }
      },
      "navigation": {
        "navbar": {
          "backgroundColor": "#ffffff",
          "borderBottom": "1px solid #e5e5e5",
          "padding": "1rem 0",
          "position": "sticky",
          "top": "0",
          "zIndex": "50"
        },
        "link": {
          "color": "#666666",
          "fontSize": "0.875rem",
          "fontWeight": "500",
          "textDecoration": "none",
          "padding": "0.5rem 1rem",
          "borderRadius": "0.375rem",
          "transition": "all 0.2s ease"
        }
      },
      "form": {
        "input": {
          "backgroundColor": "#ffffff",
          "border": "1px solid #e5e5e5",
          "borderRadius": "0.375rem",
          "padding": "0.75rem 1rem",
          "fontSize": "0.875rem",
          "color": "#1a1a1a",
          "outline": "none",
          "transition": "border-color 0.2s ease"
        },
        "label": {
          "fontSize": "0.875rem",
          "fontWeight": "500",
          "color": "#374151",
          "marginBottom": "0.5rem"
        }
      },
      "section": {
        "hero": {
          "padding": "6rem 0",
          "textAlign": "center",
          "backgroundColor": "#ffffff"
        },
        "features": {
          "padding": "4rem 0",
          "backgroundColor": "#fafafa"
        },
        "content": {
          "padding": "4rem 0",
          "backgroundColor": "#ffffff"
        }
      },
      "icon": {
        "container": {
          "width": "3rem",
          "height": "3rem",
          "borderRadius": "0.5rem",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "marginBottom": "1rem"
        },
        "green": {
          "backgroundColor": "#dcfce7",
          "color": "#16a34a"
        },
        "blue": {
          "backgroundColor": "#dbeafe",
          "color": "#2563eb"
        },
        "purple": {
          "backgroundColor": "#ede9fe",
          "color": "#7c3aed"
        }
      }
    },
    "states": {
      "hover": {
        "button-primary": {
          "backgroundColor": "#1a1a1a"
        },
        "button-secondary": {
          "backgroundColor": "#f9fafb",
          "borderColor": "#d1d5db"
        },
        "link": {
          "color": "#1a1a1a",
          "backgroundColor": "#f9fafb"
        }
      },
      "focus": {
        "input": {
          "borderColor": "#3b82f6",
          "boxShadow": "0 0 0 3px rgba(59, 130, 246, 0.1)"
        }
      },
      "active": {
        "button": {
          "transform": "translateY(1px)"
        }
      }
    },
    "animations": {
      "transition": {
        "fast": "0.1s ease",
        "base": "0.2s ease",
        "slow": "0.3s ease"
      },
      "duration": {
        "100": "100ms",
        "200": "200ms",
        "300": "300ms",
        "500": "500ms",
        "700": "700ms",
        "1000": "1000ms"
      },
      "easing": {
        "linear": "linear",
        "in": "cubic-bezier(0.4, 0, 1, 1)",
        "out": "cubic-bezier(0, 0, 0.2, 1)",
        "in-out": "cubic-bezier(0.4, 0, 0.2, 1)"
      }
    }
  }
} 