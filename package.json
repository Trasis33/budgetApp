{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "A lightweight web application for expense tracking and bill splitting for couples",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm start",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "test": "jest",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "setup": "npm install && npm run install-client",
    "migrate": "node -e \"require('knex')(require('./server/db/knexfile').development).migrate.latest().then(()=>console.log('Migrations complete')).catch(e=>{console.error(e); process.exit(1)})\""
  },
  "keywords": [
    "expense",
    "tracker",
    "bills",
    "finance",
    "budget"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "flowbite": "^3.1.2",
    "flowbite-react": "^0.12.7",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22"
  }
}
